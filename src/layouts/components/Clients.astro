---
import { markdownify } from "@lib/utils/textConverter";
import { Image } from "@astrojs/image/components";

const { clients } = Astro.props;
const { title, description, clients_list } = clients;
console.log({ clients });
---

<section class="section">
  <div class="container">
    <div class="">
      <div class="text-center">
        <h2 set:html={markdownify(title)} />
        <p class="mt-4" set:html={markdownify(description)} />
      </div>
      <div class="flex items-center justify-center">
        <div class="mt-10 grid grid-cols-2 gap-4 md:grid-cols-3 xl:grid-cols-4">
          {
            clients_list.map((item: any) => {
              return (
                <>
                  <Image
                    height={112}
                    width={185}
                    class="rounded-xl shadow-md"
                    src={item.image}
                    alt=""
                  />
                </>
              );
            })
          }
        </div>
      </div>
    </div>
  </div>
</section>
