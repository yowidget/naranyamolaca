---
import { markdownify } from "@lib/utils/textConverter";
import { Image } from "@astrojs/image/components";
const { banner, clients } = Astro.props;
const { title, button, image, content } = banner;
const {  clients_list, title: title_clients} = clients;

---

<section class="section banner relative">
  <div class="container">
    <div class="row items-center">
      <div class="lg:col-6">
        <h1 class="banner-title" set:html={markdownify(title)} />
        <p class="mt-6 mx-6 text-2xl text-justify sm:text-left" set:html={markdownify(content)} />
      </div>
      <div class="lg:col-6">
        <Image
          class="w-full  rounded-3xl p-10"
          alt="banner"
          src={image}
          width={603}
          height={396}
        />
      </div>
      <div class="flex  flex-col items-center justify-center ">
        <h2 class="text-right text-2xl md:text-4xl " set:html={markdownify(title_clients)} />
        <div class="mt-10 grid grid-cols-2 gap-4 md:grid-cols-3 xl:grid-cols-4">
          {
            clients_list.map((item: any) => {
              return (
                <>
                  <Image
                    height={112}
                    width={185}
                    class="rounded-xl shadow-md"
                    src={item.image}
                    alt=""
                  />
                </>
              );
            })
          }
        </div>
    </div>
  </div>
</section>
