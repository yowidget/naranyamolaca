---
import FeatureTab from "@layouts/function-components/FeatureTab";
import Projects from "@layouts/function-components/Projects";
import { markdownify } from "@lib/utils/textConverter";
import FeatureService from "./FeatureService.astro";

const {
  features: { title, content, management, feature_service_a,feature_service_b, feature_tab },
} = Astro.props;
---

<section class="">
  <div class="container">
    <FeatureService feature_service={feature_service_a} />
    <FeatureService feature_service={feature_service_b} />
    <FeatureTab client:load feature_tab={feature_tab} />
    <div class="p mt-14 rounded-xl bg-white p-6 shadow-lg lg:px-12 lg:py-16">
      <div class="row">
        <div class="mx-auto text-center lg:col-7">
          <h2 set:html={markdownify(title)} />
          <p class="mt-4" set:html={markdownify(content)} />
        </div>
      </div>
      <div class="row bg-gradient-to-r from-orange-300 to-orange-400 rounded-lg">
        <Projects client:load projects={management.projects} />
      </div>
    </div>
  </div>
</section>
